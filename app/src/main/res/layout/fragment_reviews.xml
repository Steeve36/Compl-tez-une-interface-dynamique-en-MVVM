<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">


    <ImageView
        android:id="@+id/profileUser"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/photo_profile"/>

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/profileUser"
        app:layout_constrainTop_toTopOf="+@id/profileUser"
        android:text="Manon Garcia"
        android:textSize="18sp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp"/>

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        app:layout_constraintTop_toBottomOf="@+id/userName"
        app:layout_constraintStart_toEndOf="@+id/profileUser" />

    <Button
        android:id="@+id/submitReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:text="Valider"
        android:backgroundTint="@color/red" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/reviewField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="80dp"

        app:layout_constraintTop_toBottomOf="@+id/profileUser"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="Partagez ici les détails de votre expérience"
        android:textSize="15sp"
        android:lineBreakWordStyle="phrase" />

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/black"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toBottomOf="@id/reviewField" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/separator"/>



</androidx.constraintlayout.widget.ConstraintLayout>